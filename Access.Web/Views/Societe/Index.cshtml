@model Access.Web.Modeles.Societe.SocieteViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="UpdateForm">
    <div class="row">
        <div class="col-xl-12">
            <div class="card card-design">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Modifier votre société</h4>
                        <div class="text-end">
                            <button type="submit" class="btn btn-success me-2" id="btnSubmit">
                                <i class="fa fa-check-circle me-2"></i> Valider
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card card-design">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-5">
                            <div class="mb-3">
                                <label asp-for="Activite" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="Activite" class="form-control" placeholder="Entrez l'activité">
                                <span asp-validation-for="Activite" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="NomCommercial" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="NomCommercial" class="form-control" placeholder="Entrez le nom commercial">
                                <span asp-validation-for="NomCommercial" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="mb-3">
                                <label asp-for="PremierResponsable" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="PremierResponsable" class="form-control" placeholder="Entrez le premier responsable">
                                <span asp-validation-for="PremierResponsable" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="RaisonSocial" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="RaisonSocial" class="form-control" placeholder="Entrez la raison sociale">
                                <span asp-validation-for="RaisonSocial" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="MatriculeFiscale" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="MatriculeFiscale" class="form-control" placeholder="Entrez le matricule fiscale">
                                <span asp-validation-for="MatriculeFiscale" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="mb-3">
                                <label asp-for="Secteur" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="Secteur" class="form-control" placeholder="Entrez le secteur">
                                <span asp-validation-for="Secteur" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="RegistreCommerce" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="RegistreCommerce" class="form-control" placeholder="Entrez le registre de commerce">
                                <span asp-validation-for="RegistreCommerce" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Gouvernorat" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="Gouvernorat" class="form-control" placeholder="Entrez le gouvernorat">
                                <span asp-validation-for="Gouvernorat" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="CodePostal" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="CodePostal" class="form-control" placeholder="Entrez le code postal">
                                <span asp-validation-for="CodePostal" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Adresse" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="Adresse" class="form-control" placeholder="Entrez l'adresse">
                                <span asp-validation-for="Adresse" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="mb-3">
                                <label asp-for="Ville" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="Ville" class="form-control" placeholder="Entrez la ville">
                                <span asp-validation-for="Ville" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="mb-3">
                                <label asp-for="AdresseMail" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="AdresseMail" class="form-control" placeholder="Entrez l'email">
                                <span asp-validation-for="AdresseMail" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="mb-3">
                                <label asp-for="Telephone" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="Telephone" class="form-control" placeholder="Entrez le téléphone">
                                <span asp-validation-for="Telephone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script type="text/javascript" src="~/js/Prametrage/Societe/Societe.js"></script>
}

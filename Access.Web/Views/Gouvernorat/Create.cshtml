@model Access.Web.Modeles.Gouvernorat.GouvernoratViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="Upsert">
    <div class="row">
        <div class="col-xl-12">
            <div class="card card-design">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            @if (Model.Id == 0)
                            {
                                <text>Créer une nouvelle gouvernorat</text>
                            }
                            else
                            {
                                <text>Modifier gouvernorat</text>
                            }
                        </h4>
                        <div class="text-end">
                            <button type="button" class="btn btn-dark me-2" onclick="location.href='/Gouvernorat/Index'">
                                <i class="fa fa-reply me-2"></i>Retour
                            </button>
                            <button type="submit" class="btn btn-success me-2" id="btnSubmit">
                                <i class="fa fa-check-circle me-2"></i>@if (Model.Id == 0)
                                {
                                    <text>Valider</text>
                                }
                                else
                                {
                                    <text>Mettre à jour</text>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card card-design">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />

                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Code" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="Code" class="form-control" placeholder="Entrez le code du gouvernorat" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Intitule" class="form-label"></label><span style="color:red">*</span>
                                <input asp-for="Intitule" class="form-control" placeholder="Entrez l'intitulé" />
                                <span asp-validation-for="Intitule" class="text-danger"></span>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script type="text/javascript" src="~/js/Gouvernorat/Gouvernorat.js"></script>
}

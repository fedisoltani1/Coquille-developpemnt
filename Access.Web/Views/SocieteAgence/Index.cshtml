@model List<Access.Web.Modeles.SocieteAgence.SocieteAgenceViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card card-design">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Liste des Agences</h4>
                    <div class="text-end">
                        <button type="button" class="btn btn-success waves-effect waves-light" onclick="location.href='/SocieteAgence/Create'">
                            <i class="fa fa-plus-circle me-2"></i>Ajouter
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card card-design">
            <div class="card-body">
               
                @if (Model != null && Model.Any())
                {
                   
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                               
                                <th class="align-middle">@Html.DisplayNameFor(model => model.First().Intitule)</th>
                                <th class="align-middle">@Html.DisplayNameFor(model => model.First().Gouvernorat)</th>
                                <th class="align-middle">@Html.DisplayNameFor(model => model.First().Ville)</th>
                                <th class="align-middle">@Html.DisplayNameFor(model => model.First().Adresse)</th>
                                <th class="align-middle">@Html.DisplayNameFor(model => model.First().Telephone)</th>
                                <th class="align-middle">@Html.DisplayNameFor(model => model.First().AdresseMail)</th>
                                <th class="align-middle">@Html.DisplayNameFor(model => model.First().IsActif)</th>
                                <th class="align-middle">@Html.DisplayNameFor(model => model.First().ResponsableName)</th>
                              
                                
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var societeAgence in Model)
                            {
                                <tr>
                                    <td>@societeAgence.Intitule</td>
                                    <td>@societeAgence.Gouvernorat</td>
                                    <td>@societeAgence.Ville</td>
                                    <td>@societeAgence.Adresse</td>
                                    <td>@societeAgence.Telephone</td>
                                    <td>@societeAgence.AdresseMail</td>
                                    <td>
                                        @if (societeAgence.IsActif)
                                        {
                                            <span class="badge bg-success">Actif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactif</span>
                                        }
                                    </td>
                                    <td>@societeAgence.ResponsableName</td>
                                   
                                    <td>
                                        <button class="btn btn-sm btn-outline-black me-1" onclick="location.href='/SocieteAgence/Update/@societeAgence.Id'" title="Modifier">
                                            <i class="fa fa-edit" style="color:black"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-black me-1" onclick="deleteAgence(@societeAgence.Id)" title="Supprimer"><i class="fa fa-trash" style="color:red"></i></button>
                                       
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center">
                        <p>Aucune agence trouvée.</p>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript" src="~/js/Prametrage/SocieteAgence/SocieteAgence.js"></script>

}

